---
import Layout from "../layouts/Layout.astro";

import TaskCounter from '../components/TaskCounter.jsx'; // ⬅️ Importar el contador
---

<Layout title="Inicio">
  <section>
        {/* Aquí pegamos todo el contenido del Dashboard */}
        <h2 class="text-3xl font-bold mb-8 text-white">Tu Dashboard</h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            {/* Bloque 1: TAREAS (Ahora es un enlace) */}
            <a 
                href="/tareas" 
                class="relative w-full aspect-square p-6 rounded-xl border border-zinc-800 bg-zinc-900 overflow-hidden group transition duration-300 hover:scale-[1.02] block cursor-pointer"
            >
                <div
                      class="absolute inset-0 rounded-xl transition-all duration-500 pointer-events-none after:content-[''] after:absolute after:inset-0 after:rounded-xl after:p-[2px] after:bg-[radial-gradient(circle_at_center,rgba(99,102,241,0.6)_0%,transparent_70%)] after:opacity-0 group-hover:after:opacity-100 after:transition-opacity after:duration-500 after:animate-spin-slow"
                >
                </div>

                <span
                      class="absolute top-3 left-3 text-xs font-semibold text-indigo-400 bg-indigo-900/40 px-2 py-0.5 rounded-full border border-indigo-700/50"
                >
                      Tareas
                </span>

                {/* ⬅️ Reemplazamos el contenido estático por el contador dinámico */}
                <TaskCounter client:load /> 
                
            </a>

            {/* Bloque 2: Próximo */}
            <a href="/calendario">
            <div
                class="relative w-full aspect-square p-6 rounded-xl border border-zinc-800 bg-zinc-900 overflow-hidden group transition duration-300 hover:scale-[1.02]"
            >
                <div
                      class="absolute inset-0 rounded-xl transition-all duration-500 pointer-events-none after:content-[''] after:absolute after:inset-0 after:rounded-xl after:p-[2px] after:bg-[radial-gradient(circle_at_center,rgba(34,197,94,0.6)_0%,transparent_70%)] after:opacity-0 group-hover:after:opacity-100 after:transition-opacity after:duration-500 after:animate-spin-slow"
                >
                </div>

                <span
                      class="absolute top-3 left-3 text-xs font-semibold text-green-400 bg-green-900/40 px-2 py-0.5 rounded-full border border-green-700/50"
                >
                      Eventos
                </span>

                <div class="flex flex-col h-full justify-center items-start">
                  <h3
                        class="text-xl md:text-2xl font-bold text-white mb-2 mt-8 text-left"
                  >
                        Próximo
                  </h3>
                  <p class="text-zinc-400 text-left">Reunión de equipo a las 3 PM.</p>
                  <div class="mt-4 text-left">
                        <span class="text-5xl font-extrabold text-green-400">3 PM</span>
                  </div>
                </div>
            </div>
            </a>

            {/* Bloque 3: Reflexión Rápida */}
            <a href="/diario">
            <div
                class="relative w-full aspect-square p-6 rounded-xl border border-zinc-800 bg-zinc-900 overflow-hidden group transition duration-300 hover:scale-[1.02]"
            >
                <div
                      class="absolute inset-0 rounded-xl transition-all duration-500 pointer-events-none after:content-[''] after:absolute after:inset-0 after:rounded-xl after:p-[2px] after:bg-[radial-gradient(circle_at_center,rgba(168,85,247,0.6)_0%,transparent_70%)] after:opacity-0 group-hover:after:opacity-100 after:transition-opacity after:duration-500 after:animate-spin-slow"
                >
                </div>

                <span
                      class="absolute top-3 left-3 text-xs font-semibold text-purple-400 bg-purple-900/40 px-2 py-0.5 rounded-full border border-purple-700/50"
                >
                      Diario
                </span>

                <div class="flex flex-col h-full justify-center items-start">
                  <h3
                        class="text-xl md:text-2xl font-bold text-white mb-2 mt-8 text-left"
                  >
                        Reflexión Rápida
                  </h3>
                  <p class="text-zinc-400 text-left">
                        Anota tus pensamientos del día.
                  </p>
                  <div class="mt-4 text-left">
                        <span class="text-5xl font-extrabold text-purple-400">Hoy</span>
                  </div>
                </div>
            </div>
            </a>
        </div>
    
  </section>
</Layout>
